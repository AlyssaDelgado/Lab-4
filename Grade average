#include <iostream>
#include <iomanip>

using namespace std;
  
int main() {

cout << "--------------------------------" << endl;
cout<<"Alyssa Delgado"<<endl;
cout<< "Computer Science 1"<<endl;
cout<<"Lab 4"<<endl;
cout<<"February 17th, 2023"<<endl;
cout << "--------------------------------" << endl;

double score1, score2, score3;  // declare variables for three scores
  
    cout << "Enter score 1 : "; // ask user for first score
    cin >> score1;  // read first score
      while ( score1 >= 100 || score1 <= 0){
         cout << "Score must be between 0 and 100, please try again: ";
        cin >> score1;
        }
  
    cout << "Enter score 2 : "; // ask user for second score
    cin >> score2;  // read second score
    while ( score2 >= 100 || score2 <= 0){
         cout << "Score must be between 0 and 100, please try again: ";
      cin >> score2;
      }
             
    cout << "Enter score 3 : "; // ask user for third score
    cin >> score3;  // read third score
    while ( score3 >= 100 || score3 <= 0){
         cout << "Score must be between 0 and 100, please try again: ";
      cin >> score3;
      }
             

    double avg = (score1 + score2 + score3) / 3.0;  // calculate average

    cout << "Average = " << setprecision(2) << fixed << avg << endl;

              
    return 0;
}
